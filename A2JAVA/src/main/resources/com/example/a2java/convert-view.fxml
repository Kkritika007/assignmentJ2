<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.HBox?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.a2java.ConvertController"
            prefHeight="400.0" prefWidth="600.0">

    <VBox alignment="CENTER" spacing="10" layoutX="64.0" layoutY="68.0">
        <Label text="Currency Converter" style="-fx-font-size: 20px;" alignment="CENTER"/>
        <GridPane>
            <columnConstraints>
                <ColumnConstraints hgrow="ALWAYS"/>
                <ColumnConstraints hgrow="ALWAYS"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints vgrow="ALWAYS"/>
                <RowConstraints vgrow="ALWAYS"/>
                <RowConstraints vgrow="ALWAYS"/>
                <RowConstraints vgrow="ALWAYS"/>
            </rowConstraints>

            <Label text="Amount:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
            <TextField fx:id="amountField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

            <Label text="From:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
            <ComboBox fx:id="fromCurrencyComboBox" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

            <Label text="To:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
            <ComboBox fx:id="toCurrencyComboBox" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

            <Button text="Convert" onAction="#convertButtonClicked" GridPane.columnIndex="0" GridPane.rowIndex="3" GridPane.columnSpan="2"/>
        </GridPane>

        <HBox>
            <Label text="Converted Amount: "/>
            <Label fx:id="convertedAmountLabel"/>
        </HBox>
    </VBox>
</AnchorPane>
